mixin head-index(title, cssPath='style', ...cssFiles)
    meta(charset="UTF-8")
    meta(
        name="viewport" 
        content="width=device-width, initial-scale=1.0"
        )
    meta(
        http-equiv="X-UA-Compatible" 
        content="ie=edge"
        )
    each cssFile in cssFiles
        link(
            rel="stylesheet" 
            href!=cssPath + cssFile
            )
    title= title